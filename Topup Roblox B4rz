    <footer style="margin-top:18px;text-align:center;color:var(--muted);font-size:13px">Demo dibuat untuk tujuan pengembangan — tidak melakukan transaksi nyata.</footer>
  </div>

  <script>
    // --- Sample Robux product data ---
    const sampleProducts = [
      {id: 'rbx-80', title: 'Robux 80', price: 15000, desc: '80 Robux Roblox'},
      {id: 'rbx-400', title: 'Robux 400', price: 75000, desc: '400 Robux Roblox'},
      {id: 'rbx-800', title: 'Robux 800', price: 140000, desc: '800 Robux Roblox'},
      {id: 'rbx-1700', title: 'Robux 1700', price: 280000, desc: '1700 Robux Roblox'},
    ];

    const rupiah = (n) => {
      return 'Rp' + n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.')
    }

    const STORAGE_KEY = 'topup_roblox_b4rz_state_v1';
    let state = {products: [], cart: []};

    function saveState(){ localStorage.setItem(STORAGE_KEY, JSON.stringify(state)) }
    function loadState(){
      try{
        const raw = localStorage.getItem(STORAGE_KEY);
        if(raw) state = JSON.parse(raw)
        else state.products = sampleProducts.slice();
      }catch(e){ state.products = sampleProducts.slice() }
    }

    function renderProducts(){
      const wrap = document.getElementById('products'); wrap.innerHTML = '';
      state.products.forEach(p => {
        const el = document.createElement('div'); el.className='product';
        el.innerHTML = `<div class='title'>${p.title}</div><div class='muted'>${p.desc}</div><div class='price'>${rupiah(p.price)}</div><div style='margin-top:8px'><button class='btn' data-id='${p.id}'>Tambah ke Keranjang</button></div>`;
        wrap.appendChild(el)
      })
      document.querySelectorAll('.product .btn').forEach(b=>b.addEventListener('click',()=>{
        addToCart(b.dataset.id)
      }))
    }

    function renderCart(){
      const list = document.getElementById('cartList'); list.innerHTML = '';
      if(state.cart.length===0){ list.innerHTML = '<div class="muted">Keranjang kosong</div>'; document.getElementById('fieldProduct').value=''; }
      else{
        state.cart.forEach((c, idx)=>{
          const row = document.createElement('div'); row.className='cart-item';
          row.innerHTML = `<div><div style="font-weight:700">${c.title}</div><div class='small'>${c.desc}</div></div><div style='text-align:right'><div>${rupiah(c.price)}</div><div style='margin-top:6px'><button class='btn ghost' data-idx='${idx}'>Hapus</button></div></div>`;
          list.appendChild(row)
        })
        document.querySelectorAll('.btn.ghost[data-idx]').forEach(b=>b.addEventListener('click',()=>{
          removeFromCart(parseInt(b.dataset.idx))
        }))
        document.getElementById('fieldProduct').value = state.cart.map(c=>c.title).join(' + ')
      }
      document.getElementById('totalPrice').innerText = rupiah(state.cart.reduce((s,i)=>s+i.price,0))
    }

    function addToCart(productId){
      const p = state.products.find(x=>x.id===productId); if(!p) return;
      state.cart.push(Object.assign({},p)); saveState(); renderCart();
      toast('Berhasil ditambahkan ke keranjang')
    }

    function removeFromCart(idx){ state.cart.splice(idx,1); saveState(); renderCart(); }

    function emptyCart(){ state.cart = []; saveState(); renderCart(); }

    function checkout(){
      if(state.cart.length===0){ toast('Keranjang kosong — pilih paket dulu'); return }
      const uid = document.getElementById('fieldUID').value.trim();
      const name = document.getElementById('fieldName').value.trim();
      const phone = document.getElementById('fieldPhone').value.trim();
      if(!uid || !name || !phone){ toast('Lengkapi User ID, Nama, dan Nomor telepon'); return }

      const order = {
        orderId: 'ORD' + Date.now(),
        items: state.cart,
        total: state.cart.reduce((s,i)=>s+i.price,0),
        uid, name, phone, method: document.getElementById('fieldPay').value
      }

      console.log('Order payload (simulate send to server):', order)
      toast('Pesanan dibuat: ' + order.orderId)

      state.cart = [];
      saveState(); renderCart();

      setTimeout(()=>{
        alert('Order sukses!\nOrder ID: ' + order.orderId + '\nTotal: ' + rupiah(order.total) + '\nSilakan ikuti instruksi pembayaran (demo).')
      },200)
    }

    function toast(msg){
      const el = document.createElement('div'); el.innerText = msg; el.style.cssText='position:fixed;right:18px;bottom:18px;padding:10px 14px;border-radius:10px;background:rgba(0,0,0,0.6);backdrop-filter:blur(4px);box-shadow:0 8px 20px rgba(0,0,0,0.6);'; document.body.appendChild(el);
      setTimeout(()=>el.style.opacity=0,1800); setTimeout(()=>el.remove(),2600);
    }

    document.getElementById('checkoutBtn').addEventListener('click',checkout)
    document.getElementById('emptyCart').addEventListener('click',()=>{ if(confirm('Kosongkan keranjang?')){ emptyCart() } })
    document.getElementById('clearStorage').addEventListener('click',()=>{ if(confirm('Reset semua data demo?')){ localStorage.removeItem(STORAGE_KEY); loadState(); renderProducts(); renderCart(); toast('Local demo direset') } })
    document.getElementById('loadSample').addEventListener('click',()=>{ state.products = sampleProducts.slice(); saveState(); renderProducts(); toast('Sample products dimuat') })

    loadState(); if(!state.products || state.products.length===0) state.products = sampleProducts.slice(); renderProducts(); renderCart();
  </script>
</body>
</html>


