          <button class="btn" id="clearStorage">Reset Local Demo</button>
          <button class="btn ghost" id="loadSample">Load Sample Data</button>
        </div>
      </div>

      <aside class="card">
        <h3>Keranjang</h3>
        <div id="cartList" style="margin-top:8px"></div>
        <div style="margin-top:10px;display:flex;justify-content:space-between;align-items:center">
          <div class="muted">Total:</div>
          <div id="totalPrice" style="font-weight:800">Rp0</div>
        </div>

        <hr style="margin:12px 0;border:none;border-top:1px dashed rgba(255,255,255,0.03)">

        <h4>Informasi Topup</h4>
